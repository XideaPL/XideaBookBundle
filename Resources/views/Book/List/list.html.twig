{% extends 'XideaBookBundle::main.html.twig' %}
{% block xidea_book_header_title %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">{{ 'book_list.title'|trans }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
{% endblock %}
{% block xidea_book_main %}
    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{ 'book_list.title'|trans }}
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>{{ 'book.name'|trans }}</th>
                                    <th>{{ 'book.created_at'|trans }}</th>
                                    <th>{{ 'book.updated_at'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for book in books %}
                                    <tr>
                                        <td>{{ book.id }}</td>
                                        <td>{{ book.name }}</td>
                                        <td>{{ book.createdAt|date() }}</td>
                                        <td>{{ book.updatedAt|date() }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
{% endblock %}
